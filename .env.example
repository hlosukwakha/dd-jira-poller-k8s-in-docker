# Datadog
DATADOG_API_KEY=replace_me
DD_SITE=datadoghq.eu
DD_ENV=dev
DD_VERSION=0.1.0

# kind cluster name (Docker container name will include it)
KIND_CLUSTER_NAME=dd-jira-kind

# Jira (Cloud or Server)
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=you@example.com
JIRA_API_TOKEN=replace_me

# Optional: Jira query
JIRA_JQL=assignee = currentUser() ORDER BY updated DESC

# Polling
POLL_INTERVAL_SECONDS=30
